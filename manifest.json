{
    "manifest_version": 2,
    "name": "Website Marker",
    "description": "Mark with black pencil on any website",
    "version": "2.0",
    "icons": {
      "48": "icons/logo_48.png",
      "64": "icons/logo_64.png"
    },
    "content_scripts": [{
      "matches": [
        "<all_urls>"
      ],
      "js": ["p5.js", "p5.dom.js", "sketch.js"]
    }],
    "permissions": ["tabs"],
    "browser_action": {
      "default_icon": "icons/logo_64.png",
      "default_title": "Click Here",
      "default_popup": "index.html"
    }
  }